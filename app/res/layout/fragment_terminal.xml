<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Hidden control lines section -->
        <LinearLayout
            android:id="@+id/controlLines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ToggleButton
                android:id="@+id/controlLineRts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="RTS"
                android:textOn="RTS" />

            <ToggleButton
                android:id="@+id/controlLineCts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="CTS"
                android:textOn="CTS"
                android:clickable="false" />

            <ToggleButton
                android:id="@+id/controlLineDtr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="DTR"
                android:textOn="DTR" />

            <ToggleButton
                android:id="@+id/controlLineDsr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="DSR"
                android:textOn="DSR"
                android:clickable="false" />

            <ToggleButton
                android:id="@+id/controlLineCd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="CD"
                android:textOn="CD"
                android:clickable="false" />

            <ToggleButton
                android:id="@+id/controlLineRi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="RI"
                android:textOn="RI"
                android:clickable="false" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <!-- Terminal Output Text -->
        <TextView
            android:id="@+id/receive_text"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="bottom"
            android:scrollbars="vertical"
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:background="#000000"
            android:padding="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <!-- Message Input -->
        <EditText
            android:id="@+id/send_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter message"
            android:inputType="text"
            android:singleLine="true" />

        <!-- Send / Location / Image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/send_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_send_white_24dp"
                android:contentDescription="Send" />

            <Button
                android:id="@+id/btnLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Location" />

            <Button
                android:id="@+id/btn_send_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Image" />
        </LinearLayout>

<!--        <Button-->
<!--            android:id=""-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Open WhatsApp Dialog"-->
<!--            android:layout_margin="16dp" />-->
        <Button
            android:id="@+id/btn_open_whatsapp_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send WhatsApp Msg via Internet"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#25D366" />


    </LinearLayout>
</ScrollView>
